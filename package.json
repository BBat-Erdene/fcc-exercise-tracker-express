{
  "name": "express-exercise-tracker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "yarn run css:prod && node ./bin/www",
    "start:dev": "nodemon ./bin/www & yarn run css:watch",
    "css:prod": "postcss public/stylesheets/tailwind.css -o public/stylesheets/style.css --minify",
    "css:watch": "watch 'yarn run css:dev' ./views",
    "css:dev": "postcss public/stylesheets/tailwind.css -o public/stylesheets/style.css"
  },
  "dependencies": {
    "autoprefixer": "^10.3.6",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "pug": "^3.0.2",
    "tailwindcss": "^2.2.16"
  },
  "devDependencies": {
    "nodemon": "^2.0.13",
    "watch": "^1.0.2"
  }
}
